
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head')%>   
    <title>Listado de Productos</title>
</head>
<body>
    <%- include('partials/header')%>   

    <div class="container">
        <h1 class="titulo">Listado de Productøs</h1>

        <section class="row ">
            <% usuarios.forEach(usuarios=> { %>
              <article class="col-12 col-md-4 col-lg-3 ">
                <ul class="list-group list-group-flush my-3 ">
                  <li class="list-group-item">
                    <h4 class="nameUsuario">
                      Nombre <%= users.name %>
                    </h4>
                  </li>
      
                  <li class="list-group-item">
                    <h6 class="precioF">
                     Apellido $<%= users.lastname %>
                    </h6>
                  </li>
                  <li class="list-group-item">
                    <p class="rol">Rol</p>
                    <h5 class="button type4"> <%= user.rol %></h5>
                  </li>

                  <li class="list-group-item"><a href="" data-bs-toggle="modal" data-bs-target="#exampleModal -<%= producto.id %> "><%=user.images[0].file%></a></li> 
                    
                  <li class="list-group-item">
                    <div class="m-2 d-flex justify-content-around">
                      <form action="/admin/edit/<%= users.id %>">
                        <button class="btn btn-sm btn-success" type="submit">Editar</a></button> 
                      </form>
                      <form action="/products/delete/<%= producto.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger" type="submit">Eliminar</a></button> 
                      </form>
                    </div>
                  </li>
                </ul>
              </article>
              <!-- Modal -->
              <div class="modal fade" id="exampleModal-<%= producto.id %>" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h6 class="modal-title" id="exampleModalLabel"><%= producto.name %> - <%= producto.category.name %> </h6>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <img src="/images/<%=producto.images[0].file%> " class="img-fluid" alt="">
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
          </section>
          <a href="/users/logout">Cerrar Sesión</a>
    </div>
    
    <%- include('partials/footer')%>   
</body>
</html>