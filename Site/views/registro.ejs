    <section>
        <div class="container inicia">
          <div class="row">
            <div class="col-md-12">
              <div class="login-container">
                <div class="register">
                  <h2 class="text1">¡Hola! Completá tus datos </h2>
                  <form action="/users/registro" method="POST" enctype="multipart/form-data">
                      <div>
                    <input type="text" placeholder="Nombre" class="nombre"  name="name" value="<%= (typeof old != 'undefined' && old.name ? old.name : null) %>">
                    <span class="text-danger"><%= (typeof errors != 'undefined' && errors.name ? errors.name.msg : null) %> </span>
                  </div>

                  <div>
                    <input type="text" placeholder="Apellido" class="apellido" name="lastname" value="<%= (typeof old != 'undefined' && old.lastname ? old.lastname : null) %>">
                    <span class="text-danger"><%= (typeof errors != 'undefined' && errors.lastname ? errors.lastname.msg : null) %> </span> 
                </div>

                <div>
                    <input type="email" placeholder="Email" class="email" name="email" value="<%= (typeof old != 'undefined' && old.email ? old.email : null) %>">
                    <span class="text-danger"><%= (typeof errors != 'undefined' && errors.email ? errors.email.msg : null) %> </span>
      
                </div>

                <div>
                    <input type="password" placeholder="Contraseña" class="password" name="password">
                    <span class="text-danger"><%= (typeof errors != 'undefined' && errors.password ? errors.password.msg : null) %> </span>
                  </div>

                <div>
                  <p>Imagen de perfil<input type="file" placeholder="selecciona tu foto de perfil" name="avatar" value="<%= (typeof old != 'undefined' && old.email ? old.email : null) %>">
                    <span class="text-danger"><%= (typeof errors != 'undefined' && errors.email ? errors.email.msg : null) %> </span>
                </div>
                    
                    <input type="submit" class="submit" value="REGISTRARME">
                  </form>
                  <a href="/users/iniciar" style="color: #30475e;">
                      <h1 class="noLogin">¿Estás registrado? <a href="/iniciar"></a>Inicia sesión</h1>
                  
