<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

	<body>
		<%- include('partials/header') %>
		
	<div class="home">

	
			<!-- COMIENZO DE CARROUSEL-->
			<script>
				$('.carousel').carousel({
 					 interval: 5000,
  				pause: "false"
						});
			</script>
			<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
				<!-- Indicators -->
				<ol class="carousel-indicators">
				  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
				</ol>
				<!-- Wrapper for slides -->
				<div class="carousel-inner">
				  <div class="carousel-item active">
					<img class="d-block w-100" src="images/carru3.jpg" data-color="lightblue" alt="First Image">
				
				  </div>
				  <div class="carousel-item">
					<img class="d-block w-100" src="images/carru2.jpg" data-color="firebrick" alt="Second Image">
	
				  </div>
				  <div class="carousel-item">
					<img class="d-block w-100" src="images/carru3.jpg" data-color="violet" alt="Third Image">
					
				  </div>
				</div>
				<!-- Controls -->
				<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
					</a>
					  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
					</a>
					</div>
		

			<!-- FIN CARROUSEL -->

			

<!-- PRODUCTOS !-->
		<section class="container">
			<div class="row productos">
			  <div class="col-12">
				<h2>Basadø en tu última visita</h2>
			  </div>
			  
			  <% visitados.forEach(product => { %>
				<div class="col-12 col-md-6 col-lg-3">
					<div class="contenido">
						<a href="/product/detail/<%=product.id%>">	
							<div>
								<img src="<%=product.images[0].file%>" alt="Imagen del producto" class="img-fluid">
								</div>
							<div class="datos">
								<h3>$<%= product.price - (product.price / 100 * product.discount) %> </h3>
								<% if (product.discount > 0) { %>
									<span><%= product.discount %> % OFF</span>
								<% } %>
								<p><%= product.name %> </p>
								<i class="fas fa-truck"></i>
							</div>
							</div>
						</a>
				  </div>
			  <% }) %>
			</section>
		 
		  <!-- PRODUCTOS OFERTAS -->
		  <section class="container">
			<div class="row productos">
			  <div class="col-12">
				<h2>Ofertas</h2>
			  </div>
			  <!-- <div class="col-12 col-md-6 col-lg-3">
				<div class="contenido"> -->

					<% enOferta.forEach(product => { %>
						<div class="col-12 col-md-6 col-lg-3">
