									<div>
										<img src="<%=product.images[0].file%>" alt="Imagen del producto" class="img-fluid">
										</div>
									<div class="datos">
										<h3>$<%=product.price - (product.price / 100 * product.discount) %> </h3>
										<% if (product.discount > 0) { %>
											<span><%=product.discount%> % OFF</span>
										<% } %>
										<p><%=product.name%> </p>
										<i class="fas fa-truck"></i>
									</div>
									</div>
								</a>
						  </div>
					  <% }) %>
						</section>
					  

